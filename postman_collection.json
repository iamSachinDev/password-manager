        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test{{$randomInt}}@example.com\",\n    \"passwordHash\": \"$2b$10$Nz2yX2wQZFhvO.HhbV1nfOK9yWw6www3oyrFOcc4bIxuvvVmB8a.G\",\n    \"kdf\": {\n        \"salt\": \"somesalt\",\n        \"memoryCost\": 65536,\n        \"timeCost\": 3,\n        \"parallelism\": 1,\n        \"keyLength\": 32\n    },\n    \"encryptedVault\": {\n        \"version\": \"v1\",\n        \"algorithm\": \"aes-256-gcm\",\n        \"iv\": \"dummyIV\",\n        \"authTag\": \"dummyTag\",\n        \"ciphertext\": \"dummyCiphertext\"\n    }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.accessToken) {",
                                    "    pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
                                    "    console.log(\"Access Token saved to collection variables\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"StrongPass123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Vault",
            "item": [
                {
                    "name": "Update Vault",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"version\": \"v1\",\n    \"algorithm\": \"aes-256-gcm\",\n    \"iv\": \"dGhpcyBpcyBhbiBpdiBmb3IgdGVzdGluZw==\",\n    \"authTag\": \"dGhpcyBpcyBhbiBhdXRoIHRhZw==\",\n    \"ciphertext\": \"c29tZSBlbmNyeXB0ZWQgZGF0YSBnb2VzIGhlcmU=\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/vault",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "vault"
                            ]
                        },
                        "description": "Update the entire encrypted vault blob."
                    },
                    "response": []
                },
                {
                    "name": "Get Passwords",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/vault",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "vault"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "accessToken",
